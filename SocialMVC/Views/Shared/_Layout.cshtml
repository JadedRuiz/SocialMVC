<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/css/estilo-muro.css" rel="stylesheet" />
    <script src='https://kit.fontawesome.com/24be03f834.js'
            crossorigin='anonymous'></script>
    <title>Social Service</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <!-- El logotipo y el icono que despliega el menú se agrupan
             para mostrarlos mejor en los dispositivos móviles -->
        <div class="navbar-header">
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img class="img-circle" src="@ViewData["img_perfil"]" />
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Perfil de Usuario</a></li>
                        <li><a href="#">Configuración</a></li>
                        <li>@Html.ActionLink("Cerrar Sesión", "Logout", "Usuario")</li>
                    </ul>
                </li>
            </ul>
            <a class="navbar-brand navbar-left" href="@Url.Action("Muro","Posts")">
            <i class="fab fa-stripe-s icon">ocial Service</i>
            </a>
            <form action="@Url.Action("Search","Posts")" method="post" class="navbar-form navbar-left form-nav" role="search">
                <div class="form-group">
                    <input type="text" class="form-control  buscador" placeholder="Busca a alguien conocido" name="busca">
                </div>
                <button type="submit" class="btn btn-default" value="enviar" name="buscar">Buscar</button>
            </form>
            @if (Convert.ToInt32(@ViewData["solicitudes"]) != 0)
            {
                <a><i class="fas fa-user-friends">@ViewData["solicitudes"]</i></a>
            }
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Social Service .NET</p>
        </footer>
    </div>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>